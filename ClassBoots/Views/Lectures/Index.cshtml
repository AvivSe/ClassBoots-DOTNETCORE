@model IEnumerable<ClassBoots.Models.Lecture>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecturerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="rows">
        <tr id="row" class="hidden">
            <td class="ID"></td>
            <td class="LectureID"></td>
            <td class="SubjectID"></td>
            <td class="Title"></td>
            <td class="Description"></td>
            <td class="Image"></td>
            <td class="Date"></td>
            <td></td>
        </tr>
    </tbody>
</table>

@section Scripts 
    {
    <script>
        $.get('./api/Lectures', function (data) {
            $.each(data, function () {
                var $row = $('#row').clone();
                $row.attr('id', '_' + this.id);

                $row.find('.ID').html(this.id);
                $row.find('.LectureID').html(this.lecturerID);
                $row.find('.SubjectID').html(this.subjectID);
                $row.find('.Title').html(this.title);
                $row.find('.Description').html(this.description);
                $row.find('.Image').html(this.image);
                $row.find('.Date').html(this.date);

                $row.removeClass('hidden');
                $('#rows').append($row);
            });
            $('#row').remove();
        });
    </script>
}