@model IEnumerable<ClassBoots.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody id="rows">
        <tr id="row" class="hidden">
            <td class="ID"></td>
            <td class="SchoolID"></td>
            <td class="Name"></td>
            <td class="Description"></td>
            <td></td>
        </tr>
    </tbody>

</table>
@section Scripts
    {
    <script>
        $.get('./api/Subjects', function (data) {
            $.each(data, function () {
                var $row = $('#row').clone();
                $row.attr('id', '_' + this.id);

                $row.find('.ID').html(this.id);
                $row.find('.SchoolID').html(this.schoolID);
                $row.find('.Name').html(this.name);
                $row.find('.Description').html(this.description);

                $row.removeClass('hidden');
                $('#rows').append($row);
            });
            $('#row').remove();
        });
    </script>
}
